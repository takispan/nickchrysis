{% set navPages = collections.all | eleventyNavigationBreadcrumb( eleventyNavigation.key, { includeSelf: true }) %}

{% if navPages | length > 0 %}
  <nav aria-label="Breadcrumb" class="breadcrumb">
    <ol class="flex items-center">
      {% for navItem in navPages %}
        {# TO DO: FIX BREADCRUMBS HOME, NOT WORKING #}
        {% if not page.fileSlug %}
          <li class="flex">
            <a href="{{ navItem.url }}" class="py-2 pr-3">Home</a>
            <span class="flex items-center color-slate-100">
              <svg class="w-4 h-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m9 5 7 7-7 7"/>
              </svg>
            </span>
          </li>
        {% else %}
          <li>
            <a href="{{ navItem.url }}"
              class="py-2 px-3"
              {% if navItem.url == page.url %}aria-current="page"{% endif %}
            >{{ navItem.title }}</a>
          </li>
        {% endif %}
      {% endfor %}
    </ol>
  </nav>
{% endif %}